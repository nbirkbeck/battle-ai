syntax = "proto2";

import "src/proto/vec3.proto";

package state;

message PowerUp {
  enum Type {
    POWER_UP_HEALTH = 0;
    POWER_UP_ARMOR = 1;
  }
  optional Vec3 pos = 1;
  optional Type type = 2;
  optional double amount = 3;
}

message Box {
  optional Vec3 pos = 1;
  optional Vec3 size = 2;
}

message SpawnPoint {
  optional Vec3 pos = 1;
}

message Level {
  repeated Box boxes = 1;
  repeated PowerUp power_ups = 2;
  repeated SpawnPoint spawn_points = 3;
}